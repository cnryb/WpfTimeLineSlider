                                                                                    <GradientStop Color="#FFB8E2F9" Offset="0.5"/>
                                                                                    <GradientStop Color="#FFB0DFF8" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Setter Property="Stroke" TargetName="OuterBorder" Value="#FF3C7FB1"/>
