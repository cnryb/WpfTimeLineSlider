                                                                            <GradientStop Color="#FF5EB4E3" Offset="0.5"/>
                                                                            <GradientStop Color="#FF4C8BB4" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="Stroke" TargetName="OuterBorder" Value="#FF2C628B"/>
