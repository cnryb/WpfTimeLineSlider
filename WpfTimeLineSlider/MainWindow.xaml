<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfTimeLineSlider" x:Class="WpfTimeLineSlider.MainWindow"
        Title="MainWindow" Height="600" 
    WindowState="Maximized"
    >
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_OnScrollChanged">
            <local:TimeLineSlider x:Name="TimeLine" StartTime="2014-12-01" EndTime="2014-12-31"/>
        </ScrollViewer>
    </Grid>
</Window>
